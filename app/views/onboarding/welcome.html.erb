<% content_for :title, "Welcome to Spotlight OS" %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 py-12">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Progress Bar -->
    <div class="mb-8">
      <div class="flex items-center justify-between text-sm font-medium text-gray-600 mb-2">
        <span>Step <%= @step_number %> of <%= @total_steps %></span>
        <span><%= @progress_percentage %>% Complete</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-gradient-to-r from-blue-500 to-purple-500 h-2 rounded-full transition-all duration-500" style="width: <%= @progress_percentage %>%"></div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
      <!-- Header with animated background -->
      <div class="relative bg-gradient-to-r from-blue-600 to-purple-600 px-8 py-12 text-center">
        <div class="absolute inset-0 bg-black opacity-10"></div>
        <div class="relative z-10">
          <div class="w-20 h-20 mx-auto mb-6 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
            <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h1 class="text-3xl font-bold text-white mb-4">Welcome to Spotlight OS!</h1>
          <p class="text-xl text-blue-100 max-w-2xl mx-auto">
            Let's get you set up with your AI-powered sales assistant in just a few minutes.
          </p>
        </div>
      </div>

      <!-- Content -->
      <div class="px-8 py-12">
        <div class="max-w-3xl mx-auto">
          <div class="grid md:grid-cols-3 gap-8 mb-12">
            <!-- Feature 1 -->
            <div class="text-center">
              <div class="w-16 h-16 mx-auto mb-4 bg-blue-100 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">AI Conversations</h3>
              <p class="text-gray-600">Natural, intelligent conversations that qualify leads automatically</p>
            </div>

            <!-- Feature 2 -->
            <div class="text-center">
              <div class="w-16 h-16 mx-auto mb-4 bg-purple-100 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 00-2-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Smart Analytics</h3>
              <p class="text-gray-600">Real-time insights and performance tracking for your sales pipeline</p>
            </div>

            <!-- Feature 3 -->
            <div class="text-center">
              <div class="w-16 h-16 mx-auto mb-4 bg-green-100 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">24/7 Availability</h3>
              <p class="text-gray-600">Never miss a lead with round-the-clock automated assistance</p>
            </div>
          </div>

          <!-- What we'll cover -->
          <div class="bg-gray-50 rounded-xl p-6 mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">What we'll cover in the next few steps:</h2>
            <div class="space-y-3">
              <div class="flex items-center">
                <div class="w-6 h-6 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-medium mr-3">1</div>
                <span class="text-gray-700">Company information and your role</span>
              </div>
              <div class="flex items-center">
                <div class="w-6 h-6 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-medium mr-3">2</div>
                <span class="text-gray-700">Create your first AI assistant</span>
              </div>
              <div class="flex items-center">
                <div class="w-6 h-6 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-medium mr-3">3</div>
                <span class="text-gray-700">Set your sales goals and preferences</span>
              </div>
            </div>
          </div>

          <!-- CTA -->
          <div class="text-center">
            <%= link_to onboarding_step_path('company_info'), 
                class: "inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-xl hover:from-blue-700 hover:to-purple-700 transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl" do %>
              Get Started
              <svg class="ml-2 w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            <% end %>
            <p class="text-sm text-gray-500 mt-4">Takes about 3-5 minutes to complete</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
