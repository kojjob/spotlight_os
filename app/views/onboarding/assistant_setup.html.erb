<% content_for :title, "Create Your AI Assistant - Onboarding" %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 py-12">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Progress Bar -->
    <div class="mb-8">
      <div class="flex items-center justify-between text-sm font-medium text-gray-600 mb-2">
        <span>Step <%= @step_number %> of <%= @total_steps %></span>
        <span><%= @progress_percentage %>% Complete</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-gradient-to-r from-blue-500 to-purple-500 h-2 rounded-full transition-all duration-500" style="width: <%= @progress_percentage %>%"></div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
      <!-- Header -->
      <div class="bg-gradient-to-r from-blue-600 to-purple-600 px-8 py-8 text-center">
        <div class="w-16 h-16 mx-auto mb-4 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
          <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-white mb-2">Create Your AI Assistant</h1>
        <p class="text-blue-100">Let's configure your first AI sales assistant</p>
      </div>

      <!-- Form -->
      <div class="px-8 py-8">
        <%= form_with model: @assistant, url: onboarding_step_path('assistant_setup'), method: :patch, local: true, class: "space-y-6" do |f| %>
          <!-- Error Messages -->
          <% if @assistant.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">Please correct the following errors:</h3>
                  <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                    <% @assistant.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Assistant Name -->
          <div>
            <%= f.label :name, "Assistant Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <%= f.text_field :name, 
                  placeholder: "e.g., Sarah, Alex, or Your AI Assistant",
                  value: "#{current_user.company} Sales Assistant",
                  class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400 bg-white text-gray-900" %>
            </div>
            <p class="mt-1 text-sm text-gray-500">Give your AI assistant a friendly name</p>
          </div>

          <!-- Assistant Role -->
          <div>
            <%= f.label :role, "Assistant Role", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2h12zM8 8h8v8H8V8z" />
                </svg>
              </div>
              <%= f.select :role, 
                  options_for_select([
                    ['Sales Representative', 'sales_rep'],
                    ['Lead Qualifier', 'lead_qualifier'],
                    ['Customer Support', 'support'],
                    ['Appointment Setter', 'appointment_setter']
                  ], 'lead_qualifier'),
                  { prompt: 'Select assistant role' },
                  { class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400 bg-white text-gray-900" } %>
            </div>
            <p class="mt-1 text-sm text-gray-500">What will your assistant's main responsibility be?</p>
          </div>

          <!-- Tone -->
          <div>
            <%= f.label :tone, "Conversation Tone", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="grid grid-cols-2 gap-3">
              <label class="relative flex cursor-pointer rounded-lg border border-gray-300 p-4 hover:border-blue-300 transition-colors duration-200">
                <%= f.radio_button :tone, "professional", class: "sr-only", checked: true %>
                <span class="flex flex-1">
                  <span class="flex flex-col">
                    <span class="block text-sm font-medium text-gray-900">Professional</span>
                    <span class="mt-1 flex items-center text-sm text-gray-500">Formal and business-focused</span>
                  </span>
                </span>
                <svg class="h-5 w-5 text-blue-600 hidden" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </label>

              <label class="relative flex cursor-pointer rounded-lg border border-gray-300 p-4 hover:border-blue-300 transition-colors duration-200">
                <%= f.radio_button :tone, "friendly", class: "sr-only" %>
                <span class="flex flex-1">
                  <span class="flex flex-col">
                    <span class="block text-sm font-medium text-gray-900">Friendly</span>
                    <span class="mt-1 flex items-center text-sm text-gray-500">Warm and conversational</span>
                  </span>
                </span>
                <svg class="h-5 w-5 text-blue-600 hidden" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </label>
            </div>
          </div>

          <!-- Language -->
          <div>
            <%= f.label :language, "Language", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
                </svg>
              </div>
              <%= f.select :language, 
                  options_for_select([
                    ['English', 'en'],
                    ['Spanish', 'es'],
                    ['French', 'fr'],
                    ['German', 'de'],
                    ['Portuguese', 'pt']
                  ], 'en'),
                  {},
                  { class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400 bg-white text-gray-900" } %>
            </div>
          </div>

          <!-- Voice Selection -->
          <div>
            <%= f.label :voice_id, "Voice", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
                </svg>
              </div>
              <%= f.select :voice_id, 
                  options_for_select([
                    ['Sarah - Professional Female', 'sarah'],
                    ['David - Professional Male', 'david'],
                    ['Emma - Friendly Female', 'emma'],
                    ['Michael - Friendly Male', 'michael']
                  ], 'sarah'),
                  {},
                  { class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400 bg-white text-gray-900" } %>
            </div>
            <p class="mt-1 text-sm text-gray-500">Choose a voice for your AI assistant</p>
          </div>

          <!-- Navigation -->
          <div class="flex items-center justify-between pt-6 border-t border-gray-200">
            <%= link_to onboarding_step_path('company_info'), 
                class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200" do %>
              <svg class="mr-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Back
            <% end %>

            <%= f.submit "Continue", 
                class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-lg hover:from-blue-700 hover:to-purple-700 transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
// Radio button styling
document.addEventListener('DOMContentLoaded', function() {
  const radioInputs = document.querySelectorAll('input[type="radio"]');
  
  radioInputs.forEach(function(input) {
    input.addEventListener('change', function() {
      // Remove checked state from all labels in this group
      const groupName = this.getAttribute('name');
      const groupInputs = document.querySelectorAll(`input[name="${groupName}"]`);
      
      groupInputs.forEach(function(groupInput) {
        const label = groupInput.closest('label');
        const checkIcon = label.querySelector('svg');
        
        if (groupInput.checked) {
          label.classList.add('border-blue-500', 'bg-blue-50');
          label.classList.remove('border-gray-300');
          checkIcon.classList.remove('hidden');
        } else {
          label.classList.remove('border-blue-500', 'bg-blue-50');
          label.classList.add('border-gray-300');
          checkIcon.classList.add('hidden');
        }
      });
    });
    
    // Trigger change event on page load for pre-selected options
    if (input.checked) {
      input.dispatchEvent(new Event('change'));
    }
  });
});
</script>
