<% content_for :title, "Set Your Goals - Onboarding" %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 py-12">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Progress Bar -->
    <div class="mb-8">
      <div class="flex items-center justify-between text-sm font-medium text-gray-600 mb-2">
        <span>Step <%= @step_number %> of <%= @total_steps %></span>
        <span><%= @progress_percentage %>% Complete</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-gradient-to-r from-blue-500 to-purple-500 h-2 rounded-full transition-all duration-500" style="width: <%= @progress_percentage %>%"></div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
      <!-- Header -->
      <div class="bg-gradient-to-r from-blue-600 to-purple-600 px-8 py-8 text-center">
        <div class="w-16 h-16 mx-auto mb-4 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
          <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 00-2-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-white mb-2">Set Your Sales Goals</h1>
        <p class="text-blue-100">Help us customize your experience with your targets</p>
      </div>

      <!-- Form -->
      <div class="px-8 py-8">
        <%= form_with url: onboarding_step_path('goals_setup'), method: :patch, local: true, class: "space-y-6" do |f| %>
          <!-- Monthly Lead Goal -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Monthly Lead Goal</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
                </svg>
              </div>
              <input type="number" name="monthly_lead_goal" placeholder="e.g., 50" class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400 bg-white text-gray-900">
            </div>
            <p class="mt-1 text-sm text-gray-500">How many new leads do you want per month?</p>
          </div>

          <!-- Current Lead Volume -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Current Monthly Lead Volume</label>
            <div class="grid grid-cols-2 gap-3">
              <label class="relative flex cursor-pointer rounded-lg border border-gray-300 p-4 hover:border-blue-300 transition-colors duration-200">
                <input type="radio" name="current_volume" value="0-10" class="sr-only">
                <span class="flex flex-1">
                  <span class="flex flex-col">
                    <span class="block text-sm font-medium text-gray-900">0-10 leads</span>
                    <span class="mt-1 flex items-center text-sm text-gray-500">Getting started</span>
                  </span>
                </span>
                <svg class="h-5 w-5 text-blue-600 hidden" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </label>

              <label class="relative flex cursor-pointer rounded-lg border border-gray-300 p-4 hover:border-blue-300 transition-colors duration-200">
                <input type="radio" name="current_volume" value="11-50" class="sr-only">
                <span class="flex flex-1">
                  <span class="flex flex-col">
                    <span class="block text-sm font-medium text-gray-900">11-50 leads</span>
                    <span class="mt-1 flex items-center text-sm text-gray-500">Growing business</span>
                  </span>
                </span>
                <svg class="h-5 w-5 text-blue-600 hidden" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </label>

              <label class="relative flex cursor-pointer rounded-lg border border-gray-300 p-4 hover:border-blue-300 transition-colors duration-200">
                <input type="radio" name="current_volume" value="51-100" class="sr-only">
                <span class="flex flex-1">
                  <span class="flex flex-col">
                    <span class="block text-sm font-medium text-gray-900">51-100 leads</span>
                    <span class="mt-1 flex items-center text-sm text-gray-500">Established</span>
                  </span>
                </span>
                <svg class="h-5 w-5 text-blue-600 hidden" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </label>

              <label class="relative flex cursor-pointer rounded-lg border border-gray-300 p-4 hover:border-blue-300 transition-colors duration-200">
                <input type="radio" name="current_volume" value="100+" class="sr-only">
                <span class="flex flex-1">
                  <span class="flex flex-col">
                    <span class="block text-sm font-medium text-gray-900">100+ leads</span>
                    <span class="mt-1 flex items-center text-sm text-gray-500">High volume</span>
                  </span>
                </span>
                <svg class="h-5 w-5 text-blue-600 hidden" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </label>
            </div>
          </div>

          <!-- Primary Goals -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-3">What are your primary goals? (Select all that apply)</label>
            <div class="space-y-3">
              <label class="flex items-center">
                <input type="checkbox" name="goals[]" value="increase_leads" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                <span class="ml-3 text-sm text-gray-700">Increase lead volume</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" name="goals[]" value="improve_qualification" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                <span class="ml-3 text-sm text-gray-700">Improve lead qualification</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" name="goals[]" value="save_time" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                <span class="ml-3 text-sm text-gray-700">Save time on initial outreach</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" name="goals[]" value="24_7_availability" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                <span class="ml-3 text-sm text-gray-700">Provide 24/7 availability</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" name="goals[]" value="scale_team" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                <span class="ml-3 text-sm text-gray-700">Scale sales team capacity</span>
              </label>
            </div>
          </div>

          <!-- Preferred Contact Hours -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Preferred Contact Hours</label>
            <div class="grid grid-cols-2 gap-3">
              <label class="relative flex cursor-pointer rounded-lg border border-gray-300 p-4 hover:border-blue-300 transition-colors duration-200">
                <input type="radio" name="contact_hours" value="business" class="sr-only" checked>
                <span class="flex flex-1">
                  <span class="flex flex-col">
                    <span class="block text-sm font-medium text-gray-900">Business Hours</span>
                    <span class="mt-1 flex items-center text-sm text-gray-500">9 AM - 5 PM</span>
                  </span>
                </span>
                <svg class="h-5 w-5 text-blue-600" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </label>

              <label class="relative flex cursor-pointer rounded-lg border border-gray-300 p-4 hover:border-blue-300 transition-colors duration-200">
                <input type="radio" name="contact_hours" value="extended" class="sr-only">
                <span class="flex flex-1">
                  <span class="flex flex-col">
                    <span class="block text-sm font-medium text-gray-900">Extended Hours</span>
                    <span class="mt-1 flex items-center text-sm text-gray-500">8 AM - 8 PM</span>
                  </span>
                </span>
                <svg class="h-5 w-5 text-blue-600 hidden" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </label>
            </div>
          </div>

          <!-- Navigation -->
          <div class="flex items-center justify-between pt-6 border-t border-gray-200">
            <%= link_to onboarding_step_path('assistant_setup'), 
                class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200" do %>
              <svg class="mr-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Back
            <% end %>

            <%= f.submit "Complete Setup", 
                class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-green-600 to-blue-600 text-white font-semibold rounded-lg hover:from-green-700 hover:to-blue-700 transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
// Radio button styling
document.addEventListener('DOMContentLoaded', function() {
  const radioInputs = document.querySelectorAll('input[type="radio"]');
  
  radioInputs.forEach(function(input) {
    input.addEventListener('change', function() {
      // Remove checked state from all labels in this group
      const groupName = this.getAttribute('name');
      const groupInputs = document.querySelectorAll(`input[name="${groupName}"]`);
      
      groupInputs.forEach(function(groupInput) {
        const label = groupInput.closest('label');
        const checkIcon = label.querySelector('svg');
        
        if (groupInput.checked) {
          label.classList.add('border-blue-500', 'bg-blue-50');
          label.classList.remove('border-gray-300');
          checkIcon.classList.remove('hidden');
        } else {
          label.classList.remove('border-blue-500', 'bg-blue-50');
          label.classList.add('border-gray-300');
          checkIcon.classList.add('hidden');
        }
      });
    });
    
    // Trigger change event on page load for pre-selected options
    if (input.checked) {
      input.dispatchEvent(new Event('change'));
    }
  });
});
</script>
