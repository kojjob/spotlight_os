<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Sign In - Spotlight OS" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="description" content="Access your Spotlight OS Voice AI Sales Platform">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100">
    <!-- Background Pattern -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-gradient-to-br from-blue-400/20 to-purple-600/20 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-gradient-to-br from-indigo-400/20 to-blue-600/20 rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-gradient-to-br from-purple-400/10 to-indigo-600/10 rounded-full blur-3xl"></div>
    </div>

    <!-- Main Content -->
    <div class="relative min-h-screen flex">
      <!-- Left Panel - Branding -->
      <div class="hidden lg:flex lg:w-1/2 bg-gradient-to-br from-blue-600 via-blue-700 to-indigo-800 relative overflow-hidden">
        <!-- Animated Background Elements -->
        <div class="absolute inset-0">
          <div class="absolute top-20 left-20 w-32 h-32 bg-white/10 rounded-full blur-xl animate-pulse"></div>
          <div class="absolute bottom-40 right-20 w-24 h-24 bg-indigo-300/20 rounded-full blur-lg animate-bounce" style="animation-delay: 1s;"></div>
          <div class="absolute top-1/2 left-10 w-16 h-16 bg-blue-300/30 rounded-full blur-md animate-ping" style="animation-delay: 2s;"></div>
        </div>

        <!-- Content -->
        <div class="relative z-10 flex flex-col justify-center px-12 text-white">
          <!-- Logo -->
          <div class="mb-8">
            <%= link_to landing_path, class: "flex items-center space-x-3 group" do %>
              <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center group-hover:bg-white/30 transition-all duration-300">
                <span class="text-white font-bold text-xl">S</span>
              </div>
              <div>
                <h1 class="text-2xl font-bold">Spotlight OS</h1>
                <p class="text-blue-200 text-sm">Voice AI Sales Platform</p>
              </div>
            <% end %>
          </div>

          <!-- Features -->
          <div class="space-y-6">
            <h2 class="text-3xl font-bold leading-tight">
              Transform Your Sales with<br>
              <span class="bg-gradient-to-r from-blue-200 to-indigo-200 bg-clip-text text-transparent">
                Voice AI Technology
              </span>
            </h2>

            <div class="space-y-4">
              <div class="flex items-center space-x-4">
                <div class="w-8 h-8 bg-green-400/20 rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-green-300" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <p class="text-blue-100">Qualify leads automatically with AI conversations</p>
              </div>

              <div class="flex items-center space-x-4">
                <div class="w-8 h-8 bg-purple-400/20 rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-purple-300" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <p class="text-blue-100">Book appointments directly into your calendar</p>
              </div>

              <div class="flex items-center space-x-4">
                <div class="w-8 h-8 bg-indigo-400/20 rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-indigo-300" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <p class="text-blue-100">Get real-time analytics and insights</p>
              </div>
            </div>

            <!-- Stats -->
            <div class="pt-8 border-t border-white/20">
              <div class="grid grid-cols-3 gap-6">
                <div class="text-center">
                  <div class="text-2xl font-bold text-white">10K+</div>
                  <div class="text-xs text-blue-200">Active Users</div>
                </div>
                <div class="text-center">
                  <div class="text-2xl font-bold text-white">95%</div>
                  <div class="text-xs text-blue-200">Satisfaction</div>
                </div>
                <div class="text-center">
                  <div class="text-2xl font-bold text-white">3x</div>
                  <div class="text-xs text-blue-200">Lead Growth</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Panel - Authentication Form -->
      <div class="w-full lg:w-1/2 flex items-center justify-center p-8">
        <div class="w-full max-w-md">
          <!-- Mobile Logo -->
          <div class="lg:hidden text-center mb-8">
            <%= link_to landing_path, class: "inline-flex items-center space-x-3 group" do %>
              <div class="w-10 h-10 bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg flex items-center justify-center">
                <span class="text-white font-bold">S</span>
              </div>
              <div class="text-left">
                <h1 class="text-xl font-bold text-gray-900">Spotlight OS</h1>
                <p class="text-gray-600 text-sm">Voice AI Sales Platform</p>
              </div>
            <% end %>
          </div>

          <!-- Flash Messages -->
          <% if notice %>
            <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <p class="text-green-800 text-sm"><%= notice %></p>
              </div>
            </div>
          <% end %>

          <% if alert %>
            <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-red-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
                <p class="text-red-800 text-sm"><%= alert %></p>
              </div>
            </div>
          <% end %>

          <!-- Main Content -->
          <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-8">
            <%= yield %>
          </div>

          <!-- Footer -->
          <div class="mt-8 text-center">
            <p class="text-sm text-gray-600">
              © 2025 Spotlight OS. All rights reserved.
            </p>
            <div class="mt-2 flex justify-center space-x-4 text-sm">
              <%= link_to "Privacy Policy", "#", class: "text-blue-600 hover:text-blue-700" %>
              <span class="text-gray-400">•</span>
              <%= link_to "Terms of Service", "#", class: "text-blue-600 hover:text-blue-700" %>
              <span class="text-gray-400">•</span>
              <%= link_to "Support", "#", class: "text-blue-600 hover:text-blue-700" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Loading Animation -->
    <div id="loading-overlay" class="fixed inset-0 bg-white/90 backdrop-blur-sm z-50 hidden">
      <div class="flex items-center justify-center min-h-screen">
        <div class="relative">
          <div class="w-12 h-12 rounded-full border-4 border-blue-200 border-t-blue-600 animate-spin"></div>
          <p class="mt-4 text-gray-600 text-sm text-center">Signing you in...</p>
        </div>
      </div>
    </div>

    <script>
      // Show loading overlay on form submission
      document.addEventListener('DOMContentLoaded', function() {
        const forms = document.querySelectorAll('form');
        const loadingOverlay = document.getElementById('loading-overlay');
        
        forms.forEach(form => {
          form.addEventListener('submit', function() {
            loadingOverlay.classList.remove('hidden');
          });
        });

        // Hide loading overlay if there are errors
        const errorMessages = document.querySelectorAll('.alert, .notice');
        if (errorMessages.length > 0) {
          loadingOverlay.classList.add('hidden');
        }
      });
    </script>
  </body>
</html>
