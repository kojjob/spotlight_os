<% content_for :title, "Watch Demo - Spotlight OS" %>
<% content_for :description, "Watch product demos showcasing Spotlight OS's voice AI technology for sales, lead qualification, and appointment booking features." %>

<!-- Demo Hero Section -->
<section class="pt-20 pb-16 bg-gradient-to-br from-blue-50 via-white to-purple-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
        Watch 
        <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
          Spotlight OS
        </span>
        in Action
      </h1>
      <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
        See our AI-powered voice technology transform sales conversations into qualified leads and booked meetings.
      </p>
    </div>
  </div>
</section>

<!-- Main Demo Video Section -->
<section class="py-20 bg-white">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-gray-900 rounded-2xl overflow-hidden shadow-2xl">
      <!-- Video placeholder - In a real implementation, this would be a video player -->
      <div class="aspect-w-16 aspect-h-9 relative bg-gray-800">
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="text-center">
            <div class="w-20 h-20 mx-auto bg-blue-600 rounded-full flex items-center justify-center cursor-pointer hover:bg-blue-700 transition-colors">
              <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M6.3 2.841A1.5 1.5 0 004 4.11v11.78a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z" />
              </svg>
            </div>
            <p class="mt-4 text-white text-xl">Click to play the main product overview</p>
          </div>
        </div>
        <%= image_tag "demo_main_preview.jpg", alt:"Spotlight OS Demo", class:"object-cover w-full h-full opacity-60" %>
      </div>
      
      <!-- Video details -->
      <div class="p-6 sm:p-10">
        <h2 class="text-2xl sm:text-3xl font-bold text-white mb-4">Spotlight OS - Full Platform Demo</h2>
        <p class="text-gray-300 text-lg mb-6">
          This comprehensive tour shows how Spotlight OS helps sales teams scale their outreach, qualify leads, and book meetings automatically with AI-powered voice technology.
        </p>
        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center space-y-4 sm:space-y-0">
          <div class="flex items-center space-x-4">
            <span class="text-gray-400"><svg class="w-5 h-5 inline mr-1" fill="currentColor" viewBox="0 0 20 20"><path d="M10 0a10 10 0 1 0 10 10A10.011 10.011 0 0 0 10 0Zm3.982 14.707-5.258-3.51a.5.5 0 0 1-.224-.417V4.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 .5.5v4.753l3.591 2.395a.5.5 0 0 1 .117.7l-1.225 1.842a.5.5 0 0 1-.701.017Z"/></svg>5:30</span>
            <span class="text-gray-400"><svg class="w-5 h-5 inline mr-1" fill="currentColor" viewBox="0 0 20 20"><path d="M10 12a2 2 0 1 0 0-4 2 2 0 0 0 0 4Z"/><path d="M0 10a10 10 0 1 1 20 0 10 10 0 0 1-20 0Zm10-8a8 8 0 1 0 0 16 8 8 0 0 0 0-16Z"/></svg>Full HD</span>
          </div>
          <div>
            <%= link_to "Request Live Demo", contact_path(inquiry_type: "demo"), class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Feature Demo Videos Section -->
<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Feature Demos</h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Get a closer look at specific features and capabilities of our platform
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @demo_videos.each do |video| %>
        <div class="bg-white rounded-xl overflow-hidden shadow-lg">
          <!-- Video thumbnail -->
          <div class="relative">
            <img src="/images/<%= video[:thumbnail] %>" alt="<%= video[:title] %>" class="w-full h-48 object-cover">
            <div class="absolute inset-0 bg-gray-900 bg-opacity-30 flex items-center justify-center">
              <div class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center cursor-pointer hover:bg-blue-700 transition-colors">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M6.3 2.841A1.5 1.5 0 004 4.11v11.78a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z" />
                </svg>
              </div>
            </div>
            <div class="absolute bottom-2 right-2 bg-gray-900 bg-opacity-70 px-2 py-1 rounded text-white text-sm">
              <%= video[:duration] %>
            </div>
          </div>
          
          <!-- Video info -->
          <div class="p-5">
            <h3 class="text-lg font-bold text-gray-900 mb-2"><%= video[:title] %></h3>
            <p class="text-gray-600 text-sm mb-4"><%= video[:description] %></p>
            <button class="text-blue-600 font-medium hover:text-blue-800 flex items-center transition-colors" data-video-id="<%= video[:video_id] %>">
              Watch now
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Testimonials Section -->
<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">What Our Users Say</h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Real results from real customers using Spotlight OS
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Testimonial 1 -->
      <div class="bg-blue-50 border border-blue-100 p-8 rounded-xl">
        <div class="flex items-start">
          <div class="flex-shrink-0 mr-4">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center text-white font-bold">
              JD
            </div>
          </div>
          <div>
            <p class="text-gray-600 italic mb-4">"Spotlight OS has transformed our sales process. We've seen a 45% increase in qualified leads and our sales team can focus on closing deals instead of cold calling."</p>
            <div>
              <p class="font-semibold text-gray-900">Jennifer Davis</p>
              <p class="text-sm text-gray-500">VP of Sales, TechCorp Inc.</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Testimonial 2 -->
      <div class="bg-purple-50 border border-purple-100 p-8 rounded-xl">
        <div class="flex items-start">
          <div class="flex-shrink-0 mr-4">
            <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold">
              RM
            </div>
          </div>
          <div>
            <p class="text-gray-600 italic mb-4">"The AI voice assistant responds so naturally that most leads don't even realize they're speaking with an AI. Our booking rates have increased by 30% since implementing Spotlight OS."</p>
            <div>
              <p class="font-semibold text-gray-900">Robert Miyamoto</p>
              <p class="text-sm text-gray-500">Head of Marketing, Global Solutions</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="py-16 bg-gradient-to-br from-blue-600 to-purple-600">
  <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
      Ready to Transform Your Sales Process?
    </h2>
    <p class="text-xl text-blue-100 mb-8">
      Join thousands of companies using Spotlight OS to qualify leads, book meetings, and grow revenue.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <%= link_to new_user_registration_path, class: "bg-white text-blue-600 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-100 transition-colors shadow-lg" do %>
        Start Free Trial
      <% end %>
      <%= link_to contact_path, class: "border border-white text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-white hover:text-blue-600 transition-colors" do %>
        Request Custom Demo
      <% end %>
    </div>
  </div>
</section>

