<% content_for :title, "Spotlight OS - Voice AI Sales Platform" %>
<% content_for :description, "Transform your sales process with AI-powered voice assistants that qualify leads, book appointments, and engage customers 24/7." %>

<!-- Hero Section -->
<section class="pt-20 pb-16 bg-gradient-to-br from-blue-50 via-white to-purple-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
        Transform Sales with 
        <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
          Voice AI
        </span>
      </h1>
      <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
        Deploy AI-powered voice assistants that qualify leads, book appointments, and engage customers 24/7. 
        Increase conversions while reducing costs.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <%= link_to new_user_registration_path, class: "bg-blue-600 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-blue-700 transition-colors shadow-lg" do %>
          Start Free Trial
        <% end %>
        <%= link_to "#demo", class: "border border-gray-300 text-gray-700 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-50 transition-colors" do %>
          Watch Demo
        <% end %>
      </div>
      
      <!-- Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto">
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-600"><%= number_with_delimiter(@stats[:total_conversations]) %>+</div>
          <div class="text-gray-600">Conversations</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-green-600"><%= number_with_delimiter(@stats[:leads_qualified]) %>+</div>
          <div class="text-gray-600">Leads Qualified</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-purple-600"><%= @stats[:conversion_rate] %>%</div>
          <div class="text-gray-600">Conversion Rate</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-orange-600"><%= @stats[:avg_response_time] %>s</div>
          <div class="text-gray-600">Avg Response</div>
        </div>
      </div>
    </div>
  </div>
</section>

