<!-- Flash Messages -->
<% if notice || alert || flash[:success] || flash[:error] %>
  <div class="fixed top-4 right-4 z-50 max-w-md" id="flash-messages">
    <% if flash[:success] || notice %>
      <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg shadow-lg slide-in">
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <p class="font-medium"><%= flash[:success] || notice %></p>
        </div>
      </div>
    <% end %>
    <% if flash[:error] || alert %>
      <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg shadow-lg slide-in">
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
          </svg>
          <p class="font-medium"><%= flash[:error] || alert %></p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

