<!-- Flash Messages -->
<% if notice || alert || flash[:success] || flash[:error] %>
  <div class="fixed top-4 right-4 z-50 max-w-md">
    <% if flash[:success] || notice %>
      <div class="bg-green-50 border border-green-200 text-green-800 px-6 py-4 rounded-lg shadow-lg backdrop-blur-sm flex items-start space-x-3 animate-slide-in">
        <div class="w-6 h-6 text-green-600 flex-shrink-0 mt-0.5">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div>
          <p class="font-medium">Success!</p>
          <p class="text-sm mt-1"><%= flash[:success] || notice %></p>
        </div>
        <button onclick="this.parentElement.remove()" class="text-green-600 hover:text-green-800 ml-auto">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    <% end %>
    
    <% if flash[:error] || alert %>
      <div class="bg-red-50 border border-red-200 text-red-800 px-6 py-4 rounded-lg shadow-lg backdrop-blur-sm flex items-start space-x-3 animate-slide-in">
        <div class="w-6 h-6 text-red-600 flex-shrink-0 mt-0.5">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div>
          <p class="font-medium">Error</p>
          <p class="text-sm mt-1"><%= flash[:error] || alert %></p>
        </div>
        <button onclick="this.parentElement.remove()" class="text-red-600 hover:text-red-800 ml-auto">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    <% end %>
  </div>
  
  <script>
    // Auto-hide flash messages after 5 seconds
    setTimeout(() => {
      const flashMessages = document.querySelectorAll('.animate-slide-in');
      flashMessages.forEach(msg => {
        msg.style.opacity = '0';
        msg.style.transform = 'translateX(100%)';
        setTimeout(() => msg.remove(), 300);
      });
    }, 5000);
  </script>
<% end %>

