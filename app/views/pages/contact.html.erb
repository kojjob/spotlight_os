<% content_for :title, "Contact Us - Spotlight OS" %>
<% content_for :description, "Get in touch with the Spotlight OS team. Request a demo, ask questions, or learn how we can help transform your sales process." %>

<!-- Contact Hero Section -->
<section class="pt-20 pb-16 bg-gradient-to-br from-blue-50 via-white to-purple-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
        Get in 
        <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
          Touch
        </span>
      </h1>
      <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
        Ready to transform your sales process? We'd love to hear from you. 
        Request a demo, ask questions, or learn how Spotlight OS can help your business grow.
      </p>
    </div>
  </div>
</section>

<!-- Contact Form Section -->
<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div class="bg-white p-8 rounded-2xl shadow-lg border border-gray-200">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Send us a message</h2>
        
        <%= form_with model: @contact_form, url: create_contact_path, local: true, class: "space-y-6" do |form| %>
          <% if @contact_form.errors.any? %>
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
              <ul class="list-disc list-inside">
                <% @contact_form.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= form.label :first_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_field :first_name, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "John" %>
            </div>
            <div>
              <%= form.label :last_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_field :last_name, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Doe" %>
            </div>
          </div>
          
          <div>
            <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.email_field :email, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "john@company.com" %>
          </div>
          
          <div>
            <%= form.label :company, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :company, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Your Company" %>
          </div>
          
          <div>
            <%= form.label :phone, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.telephone_field :phone, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "+1 (555) 123-4567" %>
          </div>
          
          <div>
            <%= form.label :inquiry_type, "Type of Inquiry", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :inquiry_type, 
                options_for_select([
                  ['Request a Demo', 'demo'],
                  ['General Question', 'general'],
                  ['Technical Support', 'support'],
                  ['Partnership Inquiry', 'partnership'],
                  ['Pricing Information', 'pricing']
                ], @contact_form.inquiry_type), 
                { prompt: 'Select an option' },
                { class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" } %>
          </div>
          
          <div>
            <%= form.label :message, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :message, rows: 5, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Tell us about your needs and how we can help..." %>
          </div>
          
          <%= form.submit "Send Message", class: "w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-blue-700 transition-colors" %>
        <% end %>
      </div>
      
      <!-- Contact Information -->
      <div class="space-y-8">
        <!-- Office Information -->
        <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-8 rounded-2xl">
          <h3 class="text-xl font-semibold text-gray-900 mb-6">Contact Information</h3>
          <div class="space-y-4">
            <div class="flex items-start space-x-3">
              <div class="w-6 h-6 text-blue-600 mt-1">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <p class="font-medium text-gray-900">Headquarters</p>
                <p class="text-gray-600">123 Innovation Drive<br>San Francisco, CA 94105</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-3">
              <div class="w-6 h-6 text-blue-600 mt-1">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <p class="font-medium text-gray-900">Phone</p>
                <a href="tel:+1-800-SPOTLIGHT" class="text-blue-600 hover:text-blue-800">+1 (800) 776-8564</a>
              </div>
            </div>
            
            <div class="flex items-start space-x-3">
              <div class="w-6 h-6 text-blue-600 mt-1">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <p class="font-medium text-gray-900">Email</p>
                <a href="mailto:hello@spotlightos.com" class="text-blue-600 hover:text-blue-800">hello@spotlightos.com</a>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Office Hours -->
        <div class="bg-gradient-to-br from-green-50 to-green-100 p-8 rounded-2xl">
          <h3 class="text-xl font-semibold text-gray-900 mb-6">Office Hours</h3>
          <div class="space-y-2">
            <div class="flex justify-between">
              <span class="text-gray-600">Monday - Friday</span>
              <span class="font-medium text-gray-900">9:00 AM - 6:00 PM PST</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Saturday</span>
              <span class="font-medium text-gray-900">10:00 AM - 2:00 PM PST</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Sunday</span>
              <span class="font-medium text-gray-900">Closed</span>
            </div>
          </div>
          <div class="mt-4 p-4 bg-white rounded-lg">
            <p class="text-sm text-gray-600">
              <strong>Need immediate assistance?</strong> Our AI assistants are available 24/7 
              to answer common questions and schedule demos.
            </p>
          </div>
        </div>
        
        <!-- Support Information -->
        <div class="bg-gradient-to-br from-purple-50 to-purple-100 p-8 rounded-2xl">
          <h3 class="text-xl font-semibold text-gray-900 mb-6">Support</h3>
          <div class="space-y-4">
            <div>
              <h4 class="font-medium text-gray-900 mb-2">Technical Support</h4>
              <p class="text-gray-600 text-sm mb-2">For existing customers with technical questions</p>
              <a href="mailto:support@spotlightos.com" class="text-purple-600 hover:text-purple-800 text-sm">support@spotlightos.com</a>
            </div>
            <div>
              <h4 class="font-medium text-gray-900 mb-2">Sales Support</h4>
              <p class="text-gray-600 text-sm mb-2">Questions about pricing, features, or demos</p>
              <a href="mailto:sales@spotlightos.com" class="text-purple-600 hover:text-purple-800 text-sm">sales@spotlightos.com</a>
            </div>
            <div>
              <h4 class="font-medium text-gray-900 mb-2">Partnership Opportunities</h4>
              <p class="text-gray-600 text-sm mb-2">Interested in becoming a partner?</p>
              <a href="mailto:partners@spotlightos.com" class="text-purple-600 hover:text-purple-800 text-sm">partners@spotlightos.com</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- FAQ Section -->
<section class="py-20 bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">Frequently Asked Questions</h2>
      <p class="text-xl text-gray-600">Quick answers to common questions</p>
    </div>
    
    <div class="space-y-8">
      <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-lg font-semibold text-gray-900 mb-3">How quickly can I get started with Spotlight OS?</h3>
        <p class="text-gray-600">Most customers are up and running within 24-48 hours. Our onboarding team will help you configure your AI assistants and integrate with your existing systems.</p>
      </div>
      
      <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-lg font-semibold text-gray-900 mb-3">Do you offer custom integrations?</h3>
        <p class="text-gray-600">Yes! We work with enterprise customers to create custom integrations with their CRM, phone systems, and other tools. Contact our sales team to discuss your specific needs.</p>
      </div>
      
      <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-lg font-semibold text-gray-900 mb-3">What kind of support do you provide?</h3>
        <p class="text-gray-600">We offer email support for all customers, priority support for Professional plans, and dedicated support for Enterprise customers. Our team is here to help you succeed.</p>
      </div>
      
      <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-lg font-semibold text-gray-900 mb-3">Can I cancel my subscription at any time?</h3>
        <p class="text-gray-600">Yes, you can cancel your subscription at any time. There are no long-term contracts or cancellation fees. Your service will continue until the end of your current billing period.</p>
      </div>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="py-20 bg-gradient-to-br from-blue-600 to-purple-600">
  <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
      Ready to Get Started?
    </h2>
    <p class="text-xl text-blue-100 mb-8">
      Don't wait to transform your sales process. Start your free trial today.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <%= link_to new_user_registration_path, class: "bg-white text-blue-600 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-100 transition-colors shadow-lg" do %>
        Start Your Free Trial
      <% end %>
      <%= link_to "#", class: "border border-white text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-white hover:text-blue-600 transition-colors", onclick: "window.scrollTo(0, 0); return false;" do %>
        Contact Form Above
      <% end %>
    </div>
  </div>
</section>
