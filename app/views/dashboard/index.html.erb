<%= content_for :title, "Dashboard" %>
<div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100">
  <%# Header Section %>
  <div class="bg-white shadow-lg shadow-slate-200/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div class="flex items-center space-x-4">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-gradient-to-r from-indigo-600 to-blue-600 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
              </svg>
            </div>
            <div>
              <h1 class="text-2xl font-bold text-slate-900">Dashboard</h1>
              <p class="text-sm text-slate-600">Welcome back, <%= current_user.name || current_user.email.split('@').first.titleize %></p>
            </div>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <div class="flex items-center space-x-3 bg-slate-50 rounded-lg px-4 py-2">
            <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
            <span class="text-sm font-medium text-slate-700">System Online</span>
          </div>
          <%= link_to "Analytics", dashboard_analytics_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
        </div>
      </div>
    </div>
  </div>

  <%# Main Content %>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <%# Stats Overview Cards %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6 gap-6 mb-8">
      <%# Total Assistants %>
      <div class="bg-white rounded-xl shadow-sm shadow-slate-200/50 p-6 hover:shadow-md hover:shadow-slate-300/50 transition-shadow">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-slate-600">Total Assistants</p>
            <p class="text-2xl font-bold text-slate-900"><%= @stats[:total_assistants] %></p>
          </div>
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
        <div class="mt-2 flex items-center text-sm">
          <span class="text-green-600 font-medium">+12%</span>
          <span class="text-slate-600 ml-1">vs last month</span>
        </div>
      </div>

      <%# Active Assistants %>
      <div class="bg-white rounded-xl shadow-sm shadow-slate-200/50 p-6 hover:shadow-md hover:shadow-slate-300/50 transition-shadow">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-slate-600">Active Assistants</p>
            <p class="text-2xl font-bold text-slate-900"><%= @stats[:active_assistants] %></p>
          </div>
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>
        </div>
        <div class="mt-2 flex items-center text-sm">
          <span class="text-green-600 font-medium">+8%</span>
          <span class="text-slate-600 ml-1">vs last month</span>
        </div>
      </div>

      <%# Total Leads %>
      <div class="bg-white rounded-xl shadow-sm shadow-slate-200/50 p-6 hover:shadow-md hover:shadow-slate-300/50 transition-shadow">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-slate-600">Total Leads</p>
            <p class="text-2xl font-bold text-slate-900"><%= @stats[:total_leads] %></p>
          </div>
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
            </svg>
          </div>
        </div>
        <div class="mt-2 flex items-center text-sm">
          <span class="text-green-600 font-medium">+24%</span>
          <span class="text-slate-600 ml-1">vs last month</span>
        </div>
      </div>

      <%# Qualified Leads %>
      <div class="bg-white rounded-xl shadow-sm shadow-slate-200/50 p-6 hover:shadow-md hover:shadow-slate-300/50 transition-shadow">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-slate-600">Qualified Leads</p>
            <p class="text-2xl font-bold text-slate-900"><%= @stats[:qualified_leads] %></p>
          </div>
          <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
            </svg>
          </div>
        </div>
        <div class="mt-2 flex items-center text-sm">
          <span class="text-green-600 font-medium">+18%</span>
          <span class="text-slate-600 ml-1">vs last month</span>
        </div>
      </div>

      <%# Active Conversations %>
      <div class="bg-white rounded-xl shadow-sm shadow-slate-200/50 p-6 hover:shadow-md hover:shadow-slate-300/50 transition-shadow">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-slate-600">Active Conversations</p>
            <p class="text-2xl font-bold text-slate-900"><%= @stats[:active_conversations] %></p>
          </div>
          <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"/>
            </svg>
          </div>
        </div>
        <div class="mt-2 flex items-center text-sm">
          <span class="text-green-600 font-medium">+15%</span>
          <span class="text-slate-600 ml-1">vs last month</span>
        </div>
      </div>

      <%# Recent Appointments %>
      <div class="bg-white rounded-xl shadow-sm shadow-slate-200/50 p-6 hover:shadow-md hover:shadow-slate-300/50 transition-shadow">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-slate-600">Appointments</p>
            <p class="text-2xl font-bold text-slate-900"><%= @stats[:recent_appointments] %></p>
          </div>
          <div class="w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-teal-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
            </svg>
          </div>
        </div>
        <div class="mt-2 flex items-center text-sm">
          <span class="text-blue-600 font-medium">Today</span>
          <span class="text-slate-600 ml-1">scheduled</span>
        </div>
      </div>
    </div>

    <%# Main Content Grid %>
    <div class="grid grid-cols-1 xl:grid-cols-4 gap-8">
      <%# Left Content - Charts and Tables %>
      <div class="xl:col-span-3 space-y-8">
        <%# Charts Row %>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <%# Leads Over Time Chart %>
          <div class="bg-white rounded-xl shadow-sm shadow-slate-200/50 p-6">
            <div class="flex items-center justify-between mb-6">
              <h3 class="text-lg font-semibold text-slate-900">Leads Over Time</h3>
              <div class="flex items-center space-x-2">
                <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                <span class="text-sm text-slate-600">New Leads</span>
              </div>
            </div>
            <div class="h-64 bg-slate-50 rounded-lg flex items-center justify-center">
              <div class="text-center">
                <svg class="w-12 h-12 text-slate-400 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"/>
                  <path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z"/>
                </svg>
                <p class="text-sm text-slate-600">Chart will render here</p>
              </div>
            </div>
          </div>

          <%# Conversion Funnel Chart %>
          <div class="bg-white rounded-xl shadow-sm shadow-slate-200/50 p-6">
            <div class="flex items-center justify-between mb-6">
              <h3 class="text-lg font-semibold text-slate-900">Conversion Funnel</h3>
              <div class="flex items-center space-x-2">
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                <span class="text-sm text-slate-600">Conversion Rate</span>
              </div>
            </div>
            <div class="h-64 bg-slate-50 rounded-lg flex items-center justify-center">
              <div class="text-center">
                <svg class="w-12 h-12 text-slate-400 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <p class="text-sm text-slate-600">Funnel chart will render here</p>
              </div>
            </div>
          </div>
        </div>

        <%# Recent Leads Table %>
        <div class="bg-white rounded-xl shadow-sm shadow-slate-200/50">
          <div class="px-6 py-4 border-b border-slate-100">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-slate-900">Recent Leads</h3>
              <%= link_to "View All", "#", class: "text-indigo-600 hover:text-indigo-700 text-sm font-medium" %>
            </div>
          </div>
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead class="bg-slate-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Lead</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Source</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Score</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Status</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Date</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-slate-200">
                <% if @recent_leads.any? %>
                  <% @recent_leads.each do |lead| %>
                    <tr class="hover:bg-slate-50">
                      <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                          <div class="w-10 h-10 bg-slate-200 rounded-full flex items-center justify-center">
                            <span class="text-sm font-medium text-slate-700">
                              <%= lead.name.present? ? lead.name.first.upcase : lead.email.first.upcase %>
                            </span>
                          </div>
                          <div class="ml-4">
                            <div class="text-sm font-medium text-slate-900"><%= lead.name.presence || "Unknown" %></div>
                            <div class="text-sm text-slate-500"><%= lead.email %></div>
                          </div>
                        </div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">
                        <span class="inline-flex px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">
                          <%= lead.source.presence || "Direct" %>
                        </span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">
                        <div class="flex items-center">
                          <span class="text-sm font-medium"><%= lead.score || "N/A" %></span>
                          <% if lead.score %>
                            <div class="ml-2 w-16 bg-slate-200 rounded-full h-2">
                              <div class="bg-gradient-to-r from-red-400 to-green-400 h-2 rounded-full" style="width: <%= [lead.score, 100].min %>%"></div>
                            </div>
                          <% end %>
                        </div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <% status_color = case lead.status
                             when 'qualified' then 'bg-green-100 text-green-800'
                             when 'contacted' then 'bg-blue-100 text-blue-800'
                             when 'converted' then 'bg-purple-100 text-purple-800'
                             else 'bg-gray-100 text-gray-800'
                           end %>
                        <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full <%= status_color %>">
                          <%= lead.status.humanize %>
                        </span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
                        <%= lead.created_at.strftime("%b %d, %Y") %>
                      </td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="5" class="px-6 py-8 text-center">
                      <div class="text-slate-400">
                        <svg class="w-12 h-12 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
                        </svg>
                        <p class="text-sm">No recent leads found</p>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <%# Right Sidebar %>
      <div class="space-y-6">
        <%# Quick Actions %>
        <div class="bg-white rounded-xl shadow-sm shadow-slate-200/50 p-6">
          <h3 class="text-lg font-semibold text-slate-900 mb-4">Quick Actions</h3>
          <div class="space-y-3">
            <%= link_to "#", class: "w-full flex items-center justify-between p-3 bg-indigo-50 hover:bg-indigo-100 rounded-lg transition-colors group" do %>
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-indigo-600 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <span class="text-sm font-medium text-slate-900">New Assistant</span>
              </div>
              <svg class="w-4 h-4 text-slate-400 group-hover:text-slate-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
              </svg>
            <% end %>

            <%= link_to "#", class: "w-full flex items-center justify-between p-3 bg-green-50 hover:bg-green-100 rounded-lg transition-colors group" do %>
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-green-600 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
                  </svg>
                </div>
                <span class="text-sm font-medium text-slate-900">Import Leads</span>
              </div>
              <svg class="w-4 h-4 text-slate-400 group-hover:text-slate-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
              </svg>
            <% end %>

            <%= link_to dashboard_analytics_path, class: "w-full flex items-center justify-between p-3 bg-purple-50 hover:bg-purple-100 rounded-lg transition-colors group" do %>
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-purple-600 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"/>
                  </svg>
                </div>
                <span class="text-sm font-medium text-slate-900">View Analytics</span>
              </div>
              <svg class="w-4 h-4 text-slate-400 group-hover:text-slate-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
              </svg>
            <% end %>
          </div>
        </div>

        <%# Live Conversations %>
        <div class="bg-white rounded-xl shadow-sm shadow-slate-200/50 p-6">
          <h3 class="text-lg font-semibold text-slate-900 mb-4">Live Conversations</h3>
          <% if @active_conversations.any? %>
            <div class="space-y-3">
              <% @active_conversations.each do |conversation| %>
                <div class="flex items-center justify-between p-3 bg-slate-50 rounded-lg">
                  <div class="flex items-center space-x-3">
                    <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                    <div>
                      <p class="text-sm font-medium text-slate-900">
                        <%= conversation.lead&.name.presence || "Unknown Lead" %>
                      </p>
                      <p class="text-xs text-slate-600">
                        with <%= conversation.assistant.name %>
                      </p>
                    </div>
                  </div>
                  <span class="text-xs text-slate-500">
                    <%= time_ago_in_words(conversation.created_at) %> ago
                  </span>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-6">
              <svg class="w-12 h-12 text-slate-400 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"/>
              </svg>
              <p class="text-sm text-slate-600">No active conversations</p>
            </div>
          <% end %>
        </div>

        <%# Today's Schedule %>
        <div class="bg-white rounded-xl shadow-sm shadow-slate-200/50 p-6">
          <h3 class="text-lg font-semibold text-slate-900 mb-4">Today's Schedule</h3>
          <% if @upcoming_appointments.any? %>
            <div class="space-y-3">
              <% @upcoming_appointments.each do |appointment| %>
                <div class="flex items-center space-x-3 p-3 bg-slate-50 rounded-lg">
                  <div class="w-2 h-10 bg-blue-500 rounded-full"></div>
                  <div class="flex-1">
                    <p class="text-sm font-medium text-slate-900">
                      <%= appointment.title.presence || "Appointment" %>
                    </p>
                    <p class="text-xs text-slate-600">
                      <%= appointment.scheduled_at.strftime("%I:%M %p") %>
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-6">
              <svg class="w-12 h-12 text-slate-400 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
              </svg>
              <p class="text-sm text-slate-600">No appointments today</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>